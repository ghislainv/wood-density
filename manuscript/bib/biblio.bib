@Article{Lachenbruch2014,
  author   = {Lachenbruch, Barbara and McCulloh, Katherine A.},
  title    = {Traits, properties, and performance: how woody plants combine hydraulic and mechanical functions in a cell, tissue, or whole plant},
  journal  = {New Phytologist},
